<div class="jumbotron">
    <div class="search_body" >
	<div class="row">
		 <form action="/representatives" class="form-horizontal">
            <fieldset>
                <!-- Address form -->

                <h2>Please enter your address to search for current representatives</h2> <br>

                <!-- address-line1 input-->
